<LinearLayout
    android:id="@+id/root"
    android:background="@color/md_white"
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/linearlayout_style_horizontal">

  <TextView
      android:id="@+id/tv_from"
      android:paddingTop="@dimen/margin_20"
      android:paddingBottom="@dimen/margin_20"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:clickable="true"
      android:gravity="center"
      android:textSize="@dimen/text_size_35"
      android:background="@drawable/item_select_clickable" />

  <TextView
      android:id="@+id/tv_sync"
      android:padding="@dimen/margin_20"
      android:layout_gravity="center|center_vertical"
      android:clickable="true"
      android:text="â‡„"
      android:gravity="center_vertical"
      android:textSize="@dimen/text_size_35"
      android:textColor="@drawable/sync_textcolor_select"
      android:background="@drawable/item_sync_uncheck"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content" />

  <TextView
      android:id="@+id/tv_to"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:paddingTop="@dimen/margin_20"
      android:paddingBottom="@dimen/margin_20"
      android:clickable="true"
      android:gravity="center"
      android:textSize="@dimen/text_size_35"
      android:background="@drawable/item_select_clickable" />
</LinearLayout>